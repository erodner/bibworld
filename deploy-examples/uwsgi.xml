<?xml version="1.0"?>

<uwsgi>
  <module>bibworldserver:app</module>
  <master />
  <virtualenv>/srv/www/webuser/.venv/bibworld</virtualenv>
  <http-socket>:3031</http-socket>
  <!--<http-socket>/tmp/bibworld.sock</http-socket>-->
  <processes>1</processes>
  <!--<plugins>python</plugins>-->
  <chdir>/srv/www/webuser/bibworld/</chdir>
  <pidfile>/tmp/bibworld.pid</pidfile>
  <daemonize>/srv/www/webuser/logs/uwsgi.log</daemonize>
  <!--<stats>/tmp/bibworld.stats</stats>-->
  <log-format>``%(addr) - %(user) [%(ltime)] "%(method) %(uri) %(proto)" %(status) %(size)`` "%(referer)" "%(uagent)"</log-format>
  <uid>webuser</uid>
  <gid>users</gid>
  <chmod-socket>775</chmod-socket>
  <logto>/srv/www/webuser/logs/details.log</logto>
</uwsgi>
